<configs>
	<append xpath="/items">
		<!-- Required to avoid some NPEs -->
		<item name="OcbParachutePlaceable">
			<property name="CreativeMode" value="None"/>
			<!-- Required to avoid further NPEs -->
			<property name="Material" value="Mcloth"/>
			<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
		</item>

		<item name="OcbParachuteDeployableSchematic">
			<property name="Extends" value="schematicMaster"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="resourceParachuteBackpack"/>
			<property name="Unlocks" value="OcbParachuteDeployable"/>
			<property name="CarryWeight" value="0.01"/>
			<effect_group tiered="false">
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar"
					cvar="OcbParachuteDeployable" operation="set" value="1"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
			</effect_group>
		</item>

		<item name="OcbParachuteDeployable">
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="resourceParachuteBackpack"/>
			<property name="CarryWeight" value="0.06"/>
			<property name="Stacknumber" value="5"/>
			<property name="Weight" value="60"/>
			<!-- Required to avoid further NPEs -->
			<property name="Material" value="Mcloth"/>
			<property name="HoldType" value="45"/>
			<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
			<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
			<property name="UnlockedBy" value="OcbParachuteDeployableSchematic"/>
			<property class="Action0">
				<property name="Class" value="DeployParachute, Parachute"/>
				<!-- <property name="Delay" value="2.5"/> -->
				<property name="ConsumeItem" value="true"/>
				<property name="DisableHotKey" value="true"/>
			</property>
		</item>

	</append>
</configs>